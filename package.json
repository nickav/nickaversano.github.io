{
  "name": "nickav",
  "version": "0.0.2",
  "license": "MIT",
  "private": false,
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:dev": "NODE_ENV=development webpack-dev-server",
    "start:dev:public": "NODE_ENV=development webpack-dev-server --host 0.0.0.0",
    "start:dev:fallback": "NODE_ENV=development SOURCE_MAP=false webpack-dev-server --history-api-fallback",
    "dist": "NODE_ENV=production webpack -p --progress && react-snapshot",
    "precommit": "lint-staged",
    "format": "prettier --config package.json --write",
    "format-all": "npm run format $(git ls-files -c -m | grep '\\.\\(jsx\\?\\|scss\\)$' | tr '\n' ' ')",
    "no-var": "[[ -z $(git ls-files | grep '\\.jsx\\?$' | xargs grep -i 'var\\s') ]] || (echo 'Error: var keyword not allowed' && exit 1)"
  },
  "dependencies": {
    "@babel/core": "^7.7.4",
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.7.4",
    "@babel/preset-env": "^7.7.4",
    "@babel/preset-react": "^7.7.4",
    "babel-loader": "^8.0.6",
    "babel-polyfill": "^6.26.0",
    "classnames": "^2.2.6",
    "clean-webpack-plugin": "^3.0.0",
    "connected-react-router": "^6.8.0",
    "copy-webpack-plugin": "^5.0.5",
    "css-loader": "^3.2.1",
    "file-loader": "^5.0.2",
    "html-webpack-plugin": "^3.2.0",
    "if-env": "^1.0.4",
    "mini-css-extract-plugin": "^0.8.0",
    "node-sass": "^4.13.0",
    "raw-loader": "^4.0.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-helmet": "^5.2.1",
    "react-hot-loader": "^4.12.18",
    "react-router-dom": "^5.1.2",
    "react-snapshot": "^1.3.0",
    "react-svg-loader": "^3.0.3",
    "sass-loader": "^8.0.0",
    "webpack": "^4.41.2",
    "webpack-dev-server": "^3.10.3"
  },
  "devDependencies": {
    "husky": "^0.14.3",
    "lint-staged": "^7.0.5",
    "prettier": "^1.5.3",
    "webpack-cli": "^3.3.10"
  },
  "lint-staged": {
    "*.{js,jsx,scss}": [
      "yarn format",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn no-var && lint-staged"
    }
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "arrowParens": "always"
  }
}
