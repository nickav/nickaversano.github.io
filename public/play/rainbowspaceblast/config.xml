<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns="http://www.w3.org/ns/widgets"
	xmlns:rim="http://www.blackberry.com/ns/widgets"
	version="1.0.0.5" id="spaceblast">
 
	<author href="http://www.nickaversano.com/" rim:copyright="Copyright 2013 Nick Aversano">Nick Aversano</author>
	<name>Space Blast</name>
	<description>
		A retro-styled space simulation. Tilt the device to move through space! Press the screen for a speed boost.
	</description>
	
	<content src="index.html" />
	<icon src="img/icon-150.png"/>
	<rim:splash src="img/splash.png"/>

	<rim:orientation mode="landscape"/>
	<feature id="blackberry.app">
		<param name="orientation" value="landscape" />
	</feature>
</widget>